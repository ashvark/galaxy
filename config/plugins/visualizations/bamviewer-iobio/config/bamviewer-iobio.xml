<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE visualization SYSTEM "../../visualization.dtd">
<visualization name="bamviewer-iobio">
    <description>This is a developer example which demonstrates how to implement and configure a basic d3-based plugin for charts.</description>
    <data_sources>
        <data_source>
            <model_class>HistoryDatasetAssociation</model_class>
            <!--test type="isinstance" test_attr="datatype" result_type="datatype">binary.Bam</test-->
            <test test_attr="ext" result_type="datatype">bam</test>
            <to_param param_attr="id">dataset_id</to_param>
        </data_source>
    </data_sources>
    <params>
        <param type="dataset" var_name_in_template="hda" required="true">dataset_id</param>
    </params>
    <template>bamviewer-iobio.mako</template>
</visualization>